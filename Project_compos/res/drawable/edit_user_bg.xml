<?xml version="1.0" encoding="utf-8"?>
<inset android:insetLeft="0.0px" android:insetRight="0.0px" android:insetTop="0.0px" android:insetBottom="0.0px"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <selector>
        <item android:state_focused="true">
            <shape>
                <stroke android:width="2.0px" android:color="@color/btn_yellow_border_focus" />
                <gradient android:startColor="@color/base_start_color_default" android:endColor="@color/base_end_color_default" android:angle="90.0" />
                <corners android:radius="5.0dip" />
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape>
                <stroke android:width="2.0px" android:color="@color/btn_yellow_border_focus" />
                <gradient android:startColor="@color/base_start_color_default" android:endColor="@color/base_end_color_default" android:angle="90.0" />
                <corners android:radius="5.0dip" />
            </shape>
        </item>
        <item>
            <shape>
                <stroke android:width="1.0px" android:color="@color/rounded_container_border" />
                <gradient android:startColor="@color/base_start_color_default" android:endColor="@color/base_end_color_default" android:angle="90.0" />
                <corners android:radius="5.0dip" />
            </shape>
        </item>
    </selector>
</inset>