<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:id="@+id/qalist_item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/qalist_item_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/qalist_item_school_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="曙光小学"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/qalist_item_top_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/qalist_item_subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/theme_color"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="数学"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qalist_item_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="张思聪"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/qalist_item_class_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="三年级二班"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/qalist_item_state_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="未解决"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/qalist_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/qalist_item_time_tv"
            android:layout_below="@id/qalist_item_top_layout"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="老师，这是我提的一个问题啊"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>