<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_all_slidemenu_bg"
    tools:context="flytv.compos.run.MainActivity" >

    <include
        android:id="@+id/title_top"
        layout="@layout/main_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_top"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:id="@+id/layout_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_text_compos_lint_add_question_type" />

            <Button
                android:id="@+id/ed_question_type"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/White"
                android:drawableRight="@drawable/im_bm_array"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" >
            </Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/main_text_compos_lint_add_question" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/White"
            android:gravity="center_vertical"
            android:minHeight="100dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/user_deiver_lint_color"
                android:orientation="vertical"
                android:padding="1dp" >

                <EditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/White"
                    android:gravity="left"
                    android:padding="10dp" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/layout_file"
                android:gravity="center_vertical"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/btn_file_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/im_add_image"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>