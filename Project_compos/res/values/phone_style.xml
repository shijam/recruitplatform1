<resources>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="style_control_commonly">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="style_edit_commonly" parent="@style/style_text_commonly">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/pop_color_text</item>
    </style>

    <style name="style_text_commonly">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_pop_text_add_lint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pop_add_color_title_text_lint</item>
    </style>

    <style name="style_text_title_commonly">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="style_pop_text_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pop_color_text</item>
    </style>
    
     <style name="style_coll_text_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
     <style name="style_coll_note_text_item">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#636363</item>
    </style>
   
    
     <style name="style_user_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/user_text_lint_color</item>
    </style>
    
    

    <style name="style_pretry_text_item">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="style_pop_text_info">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/pop_add_color_title_text</item>
    </style>

    <style name="style_pop_text_info_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pop_add_color_title_text</item>
    </style>

    <style name="style_pop_text_info_while">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
    </style>
    
    <style name="style_compos_text_rigth">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
     <style name="style_compos_text_handler">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/flytv_comment_handler_color</item>
    </style>
       <style name="style_compos_text_compos">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="style_compos_text_score">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="style_compos_text_compos_type">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="style_pop_text_info_while_18">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="style_text_info_poetry_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pop_add_color_title_text</item>
    </style>
	<style name="style_text_info_poetry_value_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pop_add_color_title_text</item>
    </style>
    <style name="style_text_info_poetry_gaze">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gaze_color</item>
    </style>

    <style name="style_mat_text_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mat_color_item_text</item>
    </style>

    <style name="style_pop_text_add">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pop_add_color_add</item>
    </style>

    <style name="style_pop_text_info_show">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pop_color_text</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>
    <!-- 全屏幕拉伸 -->
    <style name="layout_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 横向分布 -->
    <style name="layout_horizontal" parent="layout_full">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- 选项卡标签样式 -->
    <style name="bottombar_radioButton" parent="layout_horizontal">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bottom_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black_title_color</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    
     <style name="AnimationFace">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
	 <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/whites</item>
        <item name="android:shadowColor">@color/text_white_shadow_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="A1_Font_top">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/text_black_top_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/text_white_shadow_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
     <style name="A1_Font_bottom">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/text_black_bottom_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/text_white_shadow_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_star</item>
        
    </style>
</resources>